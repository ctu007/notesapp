<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#707070"
            app:cardCornerRadius="10dp">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:id="@+id/viewPriority"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_dot" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:maxLines="1"
                    android:id="@+id/notesTitle"
                    android:text="@string/app_name" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:textColor="#C3C0C0"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="zxcvbnmlkjhgfdsaqwertyuiopeyfgyagfsgefegsfgsggdhhhhhhhhsdhcvsdhgfy"
                    android:id="@+id/notesSubTitle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:layout_marginTop="15dp"
                    android:text="10 July 2021"
                    android:id="@+id/notesDate" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>